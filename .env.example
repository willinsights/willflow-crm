# ========================================
# Audiovisual CRM - Environment Variables
# ========================================

# ------------------------------------------
# Server Configuration
# ------------------------------------------

# Port the application will listen on (Railway sets this automatically)
PORT=3000

# Node environment (development, production, staging)
NODE_ENV=production

# Application origin/URL
APP_ORIGIN=https://svc-web-production-xxxx.up.railway.app

# ------------------------------------------
# API Configuration
# ------------------------------------------

# Backend API URL (URL of insights-admin service)
# In Railway, this would be the internal service URL or public URL
NEXT_PUBLIC_API_URL=https://svc-api-production-xxxx.up.railway.app

# API timeout (milliseconds)
API_TIMEOUT=30000

# ------------------------------------------
# Storage Configuration
# ------------------------------------------

# Storage mode (in-memory, local, remote)
STORAGE_MODE=in-memory

# If using remote storage, configure here
# STORAGE_PROVIDER=synology
# STORAGE_URL=

# ------------------------------------------
# Authentication
# ------------------------------------------

# Session secret (if implementing authentication)
SESSION_SECRET=change-me-to-a-secure-random-string

# Session timeout (minutes)
SESSION_TIMEOUT=60

# ------------------------------------------
# Feature Configuration
# ------------------------------------------

# Enable drag-and-drop for project management
ENABLE_DND=true

# Enable real-time updates (if implementing WebSocket)
ENABLE_REALTIME=false

# Enable file uploads
ENABLE_FILE_UPLOADS=false

# ------------------------------------------
# Integrations (Optional)
# ------------------------------------------

# Frame.io integration (video approval)
NEXT_PUBLIC_FRAMEIO_ENABLED=false
FRAMEIO_CLIENT_ID=
FRAMEIO_CLIENT_SECRET=

# Calendar integration
NEXT_PUBLIC_CALENDAR_ENABLED=false
CALENDAR_PROVIDER=google

# Email notifications
NEXT_PUBLIC_EMAIL_ENABLED=false

# ------------------------------------------
# UI/UX Configuration
# ------------------------------------------

# Default language
DEFAULT_LOCALE=pt-PT

# Date format
DATE_FORMAT=DD/MM/YYYY

# Currency
DEFAULT_CURRENCY=EUR

# ------------------------------------------
# Analytics & Monitoring (Optional)
# ------------------------------------------

# Google Analytics
NEXT_PUBLIC_GA_ID=

# Sentry (error tracking)
NEXT_PUBLIC_SENTRY_DSN=

# ------------------------------------------
# Development Only
# ------------------------------------------

# Use mock data
USE_MOCK_DATA=true

# Debug mode
DEBUG=false
