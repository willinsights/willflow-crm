model Communication {
  id        String   @id @default(uuid())
  clientId  String
  type      String   // email, phone, meeting, message, other
  subject   String
  content   String?
  status    String   // pending, sent, received, completed
  sentBy    String?
  sentAt    DateTime @default(now())
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([clientId])
  @@index([type])
  @@index([status])
  @@map("communications")
}

model ClientNote {
  id        String   @id @default(uuid())
  clientId  String
  content   String
  createdBy String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([clientId])
  @@map("client_notes")
}

model ProjectFile {
  id          String   @id @default(uuid())
  projectId   String
  name        String
  url         String
  size        Int
  mimeType    String
  category    String   // video, image, audio, document, other
  description String?
  uploadedBy  String?
  uploadedAt  DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([projectId])
  @@index([category])
  @@map("project_files")
}

model BudgetItem {
  id          String   @id @default(uuid())
  projectId   String
  category    String   // equipamento, equipe, locacao, transporte, alimentacao, pos-producao, outros
  description String
  quantity    Int
  unitPrice   Int
  total       Int
  phase       String   // captacao, edicao
  isPaid      Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([projectId])
  @@index([category])
  @@index([phase])
  @@map("budget_items")
}
